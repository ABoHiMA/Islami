<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_num"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_num"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/TV_Sura"
        app:layout_constraintBottom_toBottomOf="@id/img_num"
        app:layout_constraintEnd_toEndOf="@id/img_num"
        app:layout_constraintStart_toStartOf="@id/img_num"
        app:layout_constraintTop_toTopOf="@+id/img_num"
        tools:text="@string/verses" />

    <TextView
        android:id="@+id/tv_en"
        style="@style/TV_Sura"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/tv_verses"
        app:layout_constraintStart_toEndOf="@id/img_num"
        app:layout_constraintTop_toTopOf="@id/img_num"
        tools:text="Al-Fatiha" />

    <TextView
        android:id="@+id/tv_verses"
        style="@style/TV_Sura"
        android:textStyle="normal"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img_num"
        app:layout_constraintTop_toBottomOf="@id/tv_en"
        app:layout_constraintBottom_toBottomOf="@id/img_num"
        tools:text="7 Verses" />

    <TextView
        android:id="@+id/tv_ar"
        style="@style/TV_Sura"
        app:layout_constraintBottom_toBottomOf="@id/img_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_num"
        tools:text="الفاتحه" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/img_num"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="32dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>