<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_sebha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sebha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sebha_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="46dp"
        android:layout_marginVertical="90dp"
        android:gravity="center"
        android:text="سبحان الله"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_sebha"
        app:layout_constraintEnd_toEndOf="@id/img_sebha"
        app:layout_constraintStart_toStartOf="@id/img_sebha"
        app:layout_constraintTop_toTopOf="@id/img_sebha" />

    <TextView
        android:id="@+id/tv_sebha_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/img_sebha"
        app:layout_constraintStart_toStartOf="@id/img_sebha"
        app:layout_constraintTop_toBottomOf="@id/tv_sebha_text" />

</androidx.constraintlayout.widget.ConstraintLayout>